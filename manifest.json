{
  "manifest_version": 3,
  "name": "SafeEats",
  "description": "Convert online recipes into allergy-friendly versions using your saved allergen preferences. All logic runs locally.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "SafeEats",
    "default_icon": "newicon.png"
  },
  "icons": {
    "16": "newicon.png",
    "32": "newicon.png",
    "48": "newicon.png",
    "128": "newicon.png"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
